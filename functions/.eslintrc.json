{
  "root": true,

  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",

    "prettier",
    //"react-app",
    "plugin:prettier/recommended"
  ],
  "plugins": ["import"],
  "rules": {
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
